<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head.ejs %>
</head>
<body>
    <div id="wrap">
        <% include ../partials/header.ejs %>
            <div class="container">
                     <div class="row">
                            <div class="col-xs-12 col-sm-12">
                                 
                                     
                                        <h3>Update User</h3>
                                        <hr>
                                        <form role="form" action="/user/update/<%=user._id %>" method="post" accept-charset="utf-8">
                                            <div class="form-group">
                                                 <label for="name">Email:</label>
                                                <input type="text" class="form-control input-small" id="email" name="email" value="<%= user.email %>">
                                            </div>
                                            <div class="form-group">
                                                 <label for="first_name">First Name:</label>
                                                <input type="text" class="form-control input-small" id="first_name" name="first_name"  value="<%= user.first_name %>">
                                            </div>
                                            <div class="form-group">
                                                 <label for="last_name">Last Name:</label>
                                                <input type="text" class="form-control input-small" id="last_name" name="last_name" value="<%= user.last_name %>">
                                            </div>
                                            <div class="form-group">
                                                 <label for="name">Password:</label>
                                                 <input type="password" name="password" class="form-control input-small" id="password" value="userpassword">
                                            </div>
                                            <div class="form-group">
                                                <label for="name">Confirm Password:</label>
                                                <input type="password" name="confirm-password" class="form-control input-small" id="confirm-password" value="userpassword">
                                            </div>
                                            
                                            <div class="form-group">
                                                <label for="name">Role:</label>
                                                <select name="role" class="form-control input-small">
                                                    <option value="" <%= (user.role == "")?'selected':'' %>>Select Role</option>
                                                    <option value="user" <%= (user.role == "user")?'selected':'' %>>User</option>
                                                    <option value="superUser" <%= (user.role == "superUser")?'selected':'' %>>SuperUser</option>
                                                    <option value="admin" <%= (user.role == "admin")?'selected':'' %>>Admin</option>
                                                </select>
                                             </div>
                                            <hr>
                                            <div class="form-group">
                                                 <button type="submit" class="btn btn-danger">Save</button>
                                                 <a href="/user/manageUsers" class="btn btn-primary">Cancel</a>
                                            </div>
                                        </form>
                                     
                                 
                            </div>
                        </div>
            </div>
            <div id="push"></div>
    </div>
    <% include ../partials/footer.ejs %>
</body>

</html>