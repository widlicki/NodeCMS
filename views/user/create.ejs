<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head.ejs %>
</head>

<body>
    <div id="wrap">
        <% include ../partials/header.ejs %>
            <div class="container">
               
                        <div class="row">
                            <div class="col-xs-12 col-sm-12">
                                 
                                     
                                        <h3>Create User</h3>
                                        <hr>
                                        <form role="form" action="/user/create" method="post" accept-charset="utf-8">
                                            <div class="form-group">
                                                 <label for="name">Email:</label>
                                                <input type="text" class="form-control input-medium" id="email" name="email" >
                                            </div>
                                            <div class="form-group">
                                                 <label for="first_name">First Name:</label>
                                                <input type="text" class="form-control input-medium" id="first_name" name="first_name">
                                            </div>
                                            <div class="form-group">
                                                 <label for="last_name">Last Name:</label>
                                                <input type="text" class="form-control input-medium" id="last_name" name="last_name">
                                            </div>
                                            <div class="form-group">
                                                 <label for="name">Password:</label>
                                                 <input type="password" name="password" class="form-control input-medium" id="password">
                                            </div>
                                            <div class="form-group">
                                                <label for="name">Confirm Password:</label>
                                                <input type="password" name="confirm-password" class="form-control input-medium" id="confirm-password">
                                            </div>
                                            
                                            <div class="form-group">
                                                <label for="name">Role:</label>
                                                <select name="role" class="form-control input-medium">
                                                    <option value="">Select Role</option>
                                                    <option value="user">User</option>
                                                    <option value="superUser">SuperUser</option>
                                                    <option value="admin">Admin</option>
                                                </select>
                                             </div>
                                            <hr>
                                            <div class="form-group">
                                                 <button type="submit" class="btn btn-danger">Save</button>
                                                 <a href="/user/manageUsers" class="btn btn-primary">Cancel</a>
                                            </div>
                                        </form>
                                     
                                
                            </div>
                        </div>
            </div>
            <div id="push"></div>
    </div>
    <% include ../partials/footer.ejs %>
</body>

</html>