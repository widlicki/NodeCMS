<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head.ejs %>
</head>

<body>
    <div id="wrap">
        <% include ../partials/header.ejs %>

            <div class="container">
                <% if (message.length> 0) { %>
                    <div class="alert alert-success">
                        <%=message %>
                    </div>
                    <% } %>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6">
                                <div class="row list-group">
                                    <div class="col-xs-12 list-group-item">
                                        <h3>Add / Edit User</h3>
                                        <form role="form" action="/adduser" method="post" accept-charset="utf-8" class="form-inline">
                                            <div class="form-group">
                                                <input type="text" class="form-control input-medium" id="username" name="username" placeholder="username">
                                                <input type="password" name="password" class="form-control input-medium" id="password" placeholder="password">
                                                <button type="submit" class="btn btn-primary">Add</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-xs-12 col-sm-6">
                                <div class="row list-group">
                                    <div class="col-xs-12 list-group-item">
                                        <h3>Users</h3>
                                        <table class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Username</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% users.forEach( function( user ){ %>
                                                    <tr>
                                                        <td>
                                                            <%=user.username%>
                                                        </td>
                                                        <td> <a href="/deleteuser/<%=user.id%>" class="btn btn-danger del-user-btn" role=" button">Delete</a> </td>

                                                    </tr>
                                                    <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>
                        </div>
            </div>
            <div id="push"></div>
    </div>
    <% include ../partials/footer.ejs %>
</body>

</html>