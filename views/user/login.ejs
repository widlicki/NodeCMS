<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head.ejs %>
</head>

<body>
    <div id="wrap">
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header"></div>
            </div>
        </nav>
        <div class="container">
            <% if (message.length> 0) { %>
                <div class="alert alert-success">
                    <%=message %>
                </div>
                <% } %>

                    <form role="form" action="/login" method="post" accept-charset="utf-8">

                        <h3>Login</h3>

                        <div class="row">

                            <div class="col-sm-3">
                                <input type="text" class="form-control input-medium" id="username" name="username" placeholder="username">
                            </div>

                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <input type="password" name="password" class="form-control input-medium" id="password" placeholder="password">
                            </div>
                        </div>
                         
                            <% if (disableNewUsers == 'N') { %>
                             <br><div>
                                <a href="/sign-up">sign up</a>
                            </div><br>
                            <% } %>
                         
                        <div class="row">
                            <br>
                            <div class="col-sm-3">
                                <button type="submit" class="btn btn-primary">Login</button>
                            </div>
                        </div>
                         
                    </form>
        </div>
        <div id="push"></div>
    </div>
    <% include ../partials/footer.ejs %>
</body>

</html>